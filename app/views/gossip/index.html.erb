<section class='gossips-display ps-4 pe-4'>
  <div class="container-fluid bg-ultra-red pb-5 d-flex flex-wrap justify-content-around">
    <% @gossips.each do |gossip| %>
      <div class="card home-card m-4">
        <%= link_to gossip_path(gossip) do %>
          <div class="card-body">
            <div class="card-title">
              <%= gossip.user.first_name %>
            </div>
            <div class="card-text">
              <%= gossip.title %>
            </div>
            <div class="card-text mt-2">
              <div class="likes-count me-2">
                <%= gossip.likes.count %> like(s)
                <ul class='likes-display'>
                  <% gossip.likes.each do |like| %>
                    <li><%= "#{like.user.first_name} #{like.user.last_name}" %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

