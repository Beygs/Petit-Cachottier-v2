<canvas></canvas>

<div class="card-container container-fluid d-flex justify-content-center">
  <div class="card show-card">
    <div class="card-body">
      <h1 class='card-title text-center mb-5'><%= @tag.title %></h1>
      <div class="container-fluid">
        <div class='d-flex flex-wrap justify-content-around'>
          <% @tag.gossips.each do |gossip| %>
            <div class="card home-card m-2">
              <%= link_to gossip_path(gossip) do %>
                <div class="card-body">
                  <div class="card-title">
                    <%= gossip.user.first_name %>
                  </div>
                  <div class="card-text">
                    <%= gossip.title %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
